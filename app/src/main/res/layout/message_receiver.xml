<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/receiver"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_message_aliter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tv_message_aliter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/iv_message_aliter"
            android:background="@drawable/message_rounded_receiver"
            android:padding="10dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="bbbbbbbbb"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_message_receiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_message_aliter_text"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/iv_message_aliter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_user" />

    </RelativeLayout>

</RelativeLayout>